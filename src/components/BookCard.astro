---
const { book } = Astro.props;
---

<a href={`/books/${book.id}`} class="book-card">
  <div class="cover">
    {book.coverImage
      ? <img src={book.coverImage} alt={`Cover of ${book.title}`} />
      : <div class="cover-placeholder">{book.title[0]}</div>
    }
  </div>
  <div class="info">
    <h2 class="title">{book.title}</h2>
    <p class="author">{book.author}</p>
    <div class="meta">
      <span class="age-range">{book.ageRange}</span>
      <span class="dot">Â·</span>
      <span class="book-type">{book.bookType}</span>
    </div>
    <div class="tags">
      {book.representationTypes.map(tag => (
        <span class="tag">{tag}</span>
      ))}
      {book.deafAuthor && <span class="tag tag-author">D/HH Author</span>}
    </div>
  </div>
</a>

<style>
  .book-card {
    display: flex;
    flex-direction: column;
    background: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 10px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.15s ease, box-shadow 0.15s ease;
  }

  .book-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .cover {
    aspect-ratio: 2 / 3;
    background: #f3f4f6;
    overflow: hidden;
  }

  .cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cover-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    font-weight: 700;
    color: #9ca3af;
    background: #f3f4f6;
    user-select: none;
  }

  .info {
    padding: 0.875rem 1rem 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    flex: 1;
  }

  .title {
    font-size: 0.95rem;
    font-weight: 600;
    line-height: 1.3;
    margin: 0;
    color: #111827;
  }

  .author {
    font-size: 0.825rem;
    color: #6b7280;
    margin: 0;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.775rem;
    color: #6b7280;
    margin-top: 0.1rem;
  }

  .dot {
    color: #d1d5db;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.3rem;
    margin-top: 0.4rem;
  }

  .tag {
    font-size: 0.7rem;
    font-weight: 500;
    padding: 0.2rem 0.5rem;
    border-radius: 999px;
    background: #eff6ff;
    color: #1d4ed8;
  }

  .tag-author {
    background: #f0fdf4;
    color: #15803d;
  }
</style>
